{
    // Logging setup
    logs: {
        default: {
            enable: true,
            target: "stdout",
        },
        errors: {
            enable: true,
            target: "stderr"
        },
        events: {
            enable: true,
            target: "stdout",
            format: "json"
        },
        alerts: {
            enable: true,
            target: "file",
            format: "json",
            directory: "/tmp",
            prefix: "bpfshield_alerts.log",
            rotation: "hourly",
            max_files: 5
        }
    },
    // Definitions used in context detection
    process_labels: {
        container: [
            { contains: "containerd-shim-runc" },
            { ends_with: "/runc"}
        ],
        shell: [
            { eq: "bash" },
            { ends_with: "/bash" },
            { ends_with: "/sh" },
            { ends_with: "/csh" },
            { ends_with: "/ksh" }
        ],
        webserver: [
            { starts_with: "nginx" },
        ],
        database: [
            { contains: "mysqld" },
        ]
    }
}