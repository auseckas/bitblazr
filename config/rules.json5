{ definitions:  [
    // Block attempts to bind to sockets that are not on port 80 or 443
    {
        class: 'socket',
        event: 'listen',
        rules: {
            port: [{neq: 80}, {neq: 443 }]
        },
        action: 'block'
    },
    {
        class: 'file',
        event: 'exec',
        rules: {
            path: [{starts_with: "/usr/bin"}]
        },
        action: 'allow'
    },
    {
        class: 'file',
        event: 'exec',
        rules: {
            path: [{starts_with: "/usr/sbin"}]
        },
        action: 'allow'
    },
    {
        class: 'file',
        event: 'exec',
        rules: {
            path: [{not: {starts_with: "/usr/bin"}}]
        },
        action: 'allow'
    },
    {
        class: 'file',
        event: 'open',
        rules: {
            path: [{starts_with: "/etc/passwd"}]
        },
        action: 'allow'
    },
    {
        class: 'file',
        event: 'exec',
        rules: {
            path: [{ends_with: "sed"}]
        },
        action: 'block'
    },

]}